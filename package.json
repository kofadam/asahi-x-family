{
  "name": "asahi-x-family",
  "version": "0.1.0",
  "description": "Japanese cultural competency learning through anime-inspired scenarios",
  "private": false,
  "homepage": "https://kofadam.github.io/asahi-x-family",
  "repository": {
    "type": "git",
    "url": "https://github.com/kofadam/asahi-x-family.git"
  },
  "license": "Apache-2.0",
  "author": "kofadam",
  "keywords": [
    "japanese",
    "language-learning",
    "cultural-education",
    "anime",
    "pwa",
    "gamification",
    "travel",
    "respectful-learning"
  ],
  "dependencies": {
    "@react-three/drei": "^9.88.0",
    "@react-three/fiber": "^8.15.0",
    "animejs": "^4.1.4",
    "dexie": "^3.2.3",
    "framer-motion": "^12.23.19",
    "howler": "^2.2.4",
    "lottie-react": "^2.4.1",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0",
    "three": "^0.180.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@vitejs/plugin-react": "^3.1.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.34.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.5.6",
    "prettier": "^2.8.4",
    "tailwindcss": "^3.4.17",
    "vite": "^4.1.0",
    "vite-plugin-pwa": "^0.14.4",
    "vitest": "^0.28.5"
  },
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext js,jsx --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "content:validate": "node scripts/validate-content.js",
    "content:build": "node scripts/build-content.js",
    "content:cultural-check": "node scripts/cultural-accuracy-check.js",
    "setup": "npm install && npm run format",
    "predeploy": "npm run lint && npm run content:validate && npm run build",
    "deploy": "npm run predeploy && gh-pages -d dist"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
